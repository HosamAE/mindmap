<templates xml:space="preserve">

    <t t-name="web_mindmap_view.MindMapSidePanel">
        <div class="o_mindmap_side_panel shadow-lg d-flex flex-column">
            <div class="o_mindmap_side_panel_header d-flex justify-content-between align-items-center p-3">
                <h5 class="m-0 text-white font-weight-bold"><i class="fa fa-info-circle me-2"/> Node Details &amp; Settings</h5>
                <button class="btn-close btn-close-white" t-on-click="close" aria-label="Close"/>
            </div>
            <div class="o_mindmap_side_panel_body p-0 flex-grow-1 overflow-auto" t-ref="view">
                <View t-props="viewProps"/>
            </div>
            <div class="o_mindmap_side_panel_footer p-3 d-flex justify-content-center gap-2">
                <button class="btn_open_form_custom" t-on-click="openFullForm">
                    <i class="fa fa-external-link me-2"/> Open Form
                </button>
                <button t-if="state.isDirty" class="btn_save_custom shadow" t-on-click="saveAndClose">
                    <i class="fa fa-save me-2"/> SAVE
                </button>
            </div>
        </div>
    </t>

</templates>
