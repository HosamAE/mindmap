<templates xml:space="preserve">

    <t t-name="web_mindmap_view.MindMapRenderer">
        <div class="o_mindmap_renderer" t-on-click="clearHighlights">
            
            <!-- In-Page Search Bar -->
            <div class="o_mindmap_search_container">
                <div class="o_mindmap_search_box">
                    <i class="fa fa-search me-2 text-muted"></i>
                    <input type="text" 
                           class="form-control border-0 bg-transparent" 
                           placeholder="Search nodes..." 
                           t-on-input="onSearchInput"
                           t-ref="search_input"/>
                </div>
            </div>

            <t t-if="model.rootNodes">
                <t t-foreach="model.rootNodes" t-as="rootNode" t-key="rootNode.stableKey">
                    <MindMapNode node="rootNode" model="model" archInfo="props.archInfo" CardComponent="CardComponent" isRoot="true" />
                </t>
            </t>

            <!-- Add Root Button (Ghost Node Style) -->
            <div t-if="props.createRecord and props.archInfo.canCreate" 
                 class="o_mindmap_add_root_node" 
                 t-on-click="props.createRecord">
                <i class="fa fa-plus-circle"/> <span>Add New Root</span>
            </div>
        </div>
    </t>

</templates>
