<templates xml:space="preserve">

    <t t-name="web_mindmap_view.MindMapController">
        <Layout t-if="!props.archInfo.invisible" display="props.display" className="'o_mindmap_view'">
            <t t-set-slot="control-panel-create-button">
                 <button t-if="props.archInfo.canCreate" type="button" class="btn btn-primary" t-on-click="createRecord">New</button>
            </t>
            <div class="o_mindmap_main_container d-flex h-100">
                <div class="o_mindmap_renderer_container flex-grow-1 overflow-auto">
                    <t t-component="props.Renderer" 
                       t-key="state.renderKey"
                       model="model" 
                       archInfo="props.archInfo"
                       createRecord="createRecord"/>
                </div>
                <MindMapSidePanel t-if="sidePanelState.isOpen" 
                                  t-key="sidePanelState.resId"
                                  t-props="sidePanelProps"/>
            </div>
        </Layout>
    </t>

</templates>
