<odoo>
    <!-- Base Mindmap Settings View (Global Default) -->
    <record id="view_mindmap_base_settings" model="ir.ui.view">
        <field name="name">mindmap.base.settings.form</field>
        <field name="model">mindmap.mixin</field>
        <field name="arch" type="xml">
            <form string="Mindmap Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="mindmap_parent_id"/>
                            <field name="mindmap_color" widget="color"/>
                        </group>
                        <group>
                            <field name="mindmap_template_id"/>
                        </group>
                    </group>
                    <group string="Quick Description (Hover Card)">
                        <field name="mindmap_description" nolabel="1" placeholder="Enter a brief summary..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
